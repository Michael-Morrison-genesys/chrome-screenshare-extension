{
  "name": "PureCloud Screensharing",
  "description": "Enables screensharing in Chrome for PureCloud",
  "version": "0.1.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "permissions": [
      "desktopCapture"
  ],
  "background": {
      "scripts": ["background.js"]
  },
  "icons": {
      "16": "images/pc-16.png",
      "48": "images/pc-48.png",
      "128": "images/pc-128.png"
  },
  "content_scripts": [ {
        "js": [ "content.js" ],
        "matches": [
            "https://*.mypurecloud.com/*",
            "https://*.mypurecloud.com.au/*"
        ]
  }]
}
